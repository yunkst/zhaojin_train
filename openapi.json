                  ]
                },
                "examples": {
                  "1": {
                    "summary": "成功示例",
                    "value": {
                      "id": 3,
                      "single": [
                        {
                          "total_score": 2,
                          "question": {
                            "id": 1,
                            "question_type": "single",
                            "description": "老持象作引满。她色该设生圆马。论米体你认。才也此整。分组单类南格们气加间。",
                            "options": [
                              "计织集完因说。",
                              "非必除使响天口。"
                            ]
                          }
                        },
                        {
                          "total_score": 7,
                          "question": {
                            "id": 2,
                            "question_type": "single",
                            "description": "想第导。技走造达确具有素二。",
                            "options": [
                              "各好近用会气。",
                              "据长七多经。",
                              "两把作制。"
                            ]
                          }
                        },
                        {
                          "total_score": 10,
                          "question": {
                            "id": 3,
                            "question_type": "single",
                            "description": "后面力已实其办写名。多办事离前家法情。",
                            "options": [
                              "月义目报解油道各。",
                              "使变住什度取求存交。",
                              "布解值间今厂。"
                            ]
                          }
                        }
                      ],
                      "multi": [
                        {
                          "total_score": 5,
                          "question": {
                            "id": 10,
                            "question_type": "multi",
                            "description": "大华把音最。道京之相或。效处品美列劳知律只。达周便。",
                            "options": [
                              "较体省后飞求少无标报。",
                              "展圆物红情候电。",
                              "属阶件。"
                            ]
                          }
                        }
                      ],
                      "judge": [
                        {
                          "total_score": 9,
                          "question": {
                            "id": 11,
                            "question_type": "judge",
                            "description": "老连回月取段。受选型。张又节口结文日比几车。今马务报。"
                          }
                        },
                        {
                          "total_score": 8,
                          "question": {
                            "id": 12,
                            "question_type": "judge",
                            "description": "九取反今角管。观目处设增公太电或消。器际都包水。议统边么何立有。这来须装存。层却集当应。"
                          }
                        }
                      ],
                      "blank": [
                        {
                          "total_score": 7,
                          "question": {
                            "id": 21,
                            "question_type": "blank",
                            "description": "根据金属非金属地下矿山重大事故隐患判定标准，如果矿井只有<%%1%%>个独立直达地面的安全出口且安全出口的间距小于<%%2%%>米，则存在安全隐患。"
                          }
                        }
                      ],
                      "qa": [
                        {
                          "total_score": 8,
                          "question": {
                            "id": 22,
                            "question_type": "qa",
                            "description": "情立听照划。义需十米影便论。清算很。派干运。确听接调给化已。少包行展。"
                          }
                        },
                        {
                          "total_score": 4,
                          "question": {
                            "id": 22,
                            "question_type": "qa",
                            "description": "解程团影由确况也样。复小反长度石。"
                          }
                        },
                        {
                          "total_score": 5,
                          "question": {
                            "id": 25,
                            "question_type": "qa",
                            "description": "通点市写。据被质太亲装常众时今。"
                          }
                        }
